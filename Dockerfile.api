FROM python:3.11-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY mcp_langgraph_app/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create uploads directory
RUN mkdir -p mcp_langgraph_app/uploads/symptom_photos

# Expose FastAPI port
EXPOSE 8000

# Run FastAPI with embedded FastMCP
CMD ["uvicorn", "mcp_langgraph_app.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
